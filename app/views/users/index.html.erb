<div class = "container">
  <div class = "row">
    <%= render 'shares/index', book: @book , user: @user %>

    <%= flash[:success] %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
          <td><%= attachment_image_tag @book.user, :profile_image, size: "40x40" , fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
