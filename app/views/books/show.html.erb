<p><%= flash[:success] %></p>
<div class = "container">
<div class = "row">
<%= render 'shares/index', book: @newbook , user: @user %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
   <table class="table">
  		<tbody>
  		<tr>
  		 <td><%= attachment_image_tag @book.user, :profile_image, size: "40x40" , fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
  		    <%= link_to @user.name, user_path(@user.id)%></td>
  		    <td><%= @book.title %></td>
            <td><%= @book.body %></td>
                <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-sm btn-success edit_book_36722" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger destroy_book_36722",method: :delete,"data-confirm" => "本当に消しますか?" %></td>
                <% end %>
          </tr>
      </tbody>
    </table>
</div>
</div>
</div>
